{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Insights Daily",
  "description": "Schema for daily insights events.",
  "type": "object",
  "required": ["timestamp", "content"],
  "properties": {
    "timestamp": {
      "type": "string",
      "description": "ISO8601 timestamp",
      "format": "date-time"
    },
    "content": {
      "type": "string",
      "description": "The insight content"
    },
    "type": {
      "type": "string",
      "const": "daily.insight"
    }
  }
}
