{
  "$id": "https://heimgewebe/contracts/chronik/event.batch.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Chronik Event Batch",
  "type": "object",
  "properties": {
    "events": {
      "type": "array",
      "items": { "type": "object" }
    },
    "next_cursor": {
      "type": "integer",
      "description": "Byte offset cursor for the next batch."
    },
    "has_more": {
      "type": "boolean",
      "description": "True if there are potentially more events to fetch."
    }
  },
  "required": ["events", "next_cursor", "has_more"],
  "additionalProperties": false
}
